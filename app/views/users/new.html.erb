<% provide :title, t(".signup") %>
<h1><%= t ".signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: t(".enter_name"), class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: t(".enter_email"), class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: t(".enter_password"), class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: t(".confirm_password"), class: "form-control" %>

      <%= f.submit t(".create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
